<div class="container">
<%= simple_form_for @appointment do |f| %>
  <div class="d-flex">
    <%= f.input :date, as: :date %>
    <%= f.select :hour, collection: [ "9:00", "10:00" ] %>
  </div>
  <%= f.label :pet %>
  <div class="vets_container">
    <% @vets.each do |vet| %>
      <div class="card">
        <%= cl_image_tag vet.photo.key %>
        <div class="card-body">
          <h5 class="card-title"><%= vet.name %></h5>
          <%= radio_button_tag "appointment[vet_id]", vet.id %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="vets_container">
    <% @pets.each do |pet| %>
      <div class="card">
        <%= cl_image_tag pet.photo.key %>
        <div class="card-body">
          <h5 class="card-title"><%= pet.name %></h5>
          <%= radio_button_tag "appointment[pet_id]", pet.id %>
        </div>
      </div>
    <% end %>
  </div>
  <%= f.submit "Create Appointment" %>
<% end %>
</div>
