<div class="container">
  <%= simple_form_for @appointment do |f| %>
    <h2 class = "text-center" style="margin: 3em; margin-bottom: 1em;">Selecciona una fecha y hora para la cita</h2>
    <div class="d-flex align-items-center justify-content-center" style="gap: 3em; margin-bottom: 2em;" data-controller="flatpickr">
      <%= f.input :date, as: :string, input_html: { data: { flatpickr_target: "date" } } %>
      <%= f.select :hour, @hours%>
    </div>
    <h2 class = "text-center" style="margin: 3em; margin-top: 1em;">Elige el veterinario/a que atenderá a tu mascota</h2>
    <div class="vets_container justify-content-center">
      <% @vets.each do |vet| %>
        <div class="card text-center">
          <%= cl_image_tag vet.photo.key, height: 250, style: "object-fit: cover;" %>
          <div class="card-body">
            <h5 class="card-title"><%= vet.name %></h5>
            <%= f.label :vet, vet.name, class: "btn btn-primary", value: vet.id do %>
              <%= f.radio_button :vet_id, vet.id %>
              Seleccionar
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <h2 class = "text-center" style="margin: 3em;">Escoge tu mascota que será atendida</h2>
    <div class="vets_container justify-content-center">
      <% @pets.each do |pet| %>
        <div class="card text-center">
          <%= cl_image_tag pet.photo.key, height: 250, style: "object-fit: cover;" %>
          <div class="card-body">
            <h5 class="card-title"><%= pet.name %></h5>
            <%= f.label :pet, pet.name, class: "btn btn-primary", value: pet.id do %>
              <%= f.radio_button :pet_id, pet.id %>
              Seleccionar
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <%= f.submit "Crear cita", class: "button1", style: "margin-bottom: 3em;" %>
  <% end %>
</div>
