<div class="container">

  <div class="row my-4" data-controller="owner-signup">

    <div class="col-6 text-center">
      <%= image_tag "owner-sign-up.jpg", class: "sign-up-img" %>
    </div>

    <div class="col-6 shadow-lg border rounded" data-owner-signup-target="steps">
      <div class="my-3 mx-2">
        <h2>Registro Dueños</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
          <%= f.error_notification %>

          <div class="step">
            <h3> Información Login </h3>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" },
                        label: "Contraseña" %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" },
                        label: "Confirma contraseña" %>
          </div>

          <div class="step">
            <h3> Información adicional </h3>
            <%= f.input :name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "name" },
                        label: "Nombre" %>
            <%= f.input :last_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "last-name" },
                        label: "Apellido" %>
            <%= f.input :phone_number,
                        required: true,
                        hint: "+569 XXXXXXXX",
                        autofocus: true,
                        label: "Número de contacto" %>
            <%= f.input :address,
                        required: true,
                        autofocus: true,
                        label: "Dirección" %>
          </div>

          <div class="d-flex justify-content-center gap-2">
            <button type="button"
                    id="prevBtn"
                    data-action="click->owner-signup#nextPrev"
                    data-owner-signup-n-param="-1"
                    class="btn btn-secondary"> Atras </button>
            <button type="button"
                    id="nextBtn"
                    data-action="click->owner-signup#nextPrev"
                    data-owner-signup-n-param="1"
                    class="btn btn-primary"> Siguiente </button>
            <%= f.button :submit, "Sign up", id: "signupBtn", class: "btn btn-primary" %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>

      <ul class="pagination pagination-lg justify-content-center">
        <li class="page-item active"><span class="page-link">1</span></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
      </ul>
    </div>

  </div>

</div>
