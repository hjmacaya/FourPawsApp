<div class="vistalog">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs mb-2 col-md-6 col-lg-2 m-1">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions btn btn-primary text-primary col-lg-1">
      <%= f.button :submit, "Log in" %>
    </div>

  <% end %>
    <%= render "owners/shared/links" %>
</div>
