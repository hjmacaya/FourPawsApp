<div class="show-pet-container">

  <div class="row my-4" data-controller="vet-pet-show">

    <div class="col-12 col-lg-8 offset-lg-2 bg-light py-4">

      <div class="d-flex flex-column">

        <div class="d-flex flex-row justify-content-start mx-3 gap-4">

          <%# Pet img %>
          <%= cl_image_tag @pet.photo.key, class: "show-pet-img" %>

          <%# Pet Info %>
          <div class="show-pet-info-content">

            <h3 class="show-pet-title"> <%= @pet.name %> </h3>

            <ul class="pet-info-container">
              <li class="show-pet-info"> <strong> Edad: </strong> <%= @age_years %> a√±os con <%= @age_months %> meses </li>
              <li class="show-pet-info"> <strong> Peso: </strong> <%= @pet.weight %> Kg </li>
              <li class="show-pet-info"> <strong> Chip </strong> <%= @pet.pet_chip %> </li>
              <li class="show-pet-info last-item"> <strong> Tipo: </strong> <%= @pet.animal_type.animal_type %> </li>
            </ul>

          </div>
        </div>

        <%# Pet medical history & Appointments & Other options %>
        <div class="vet-show-pet-btn-group">
          <button data-action="click->vet-pet-show#open"
                  data-info-data="records-3"> Registros </button>
          <button data-action="click->vet-pet-show#open"
                  data-info-data="appointments-3"> Citas </button>
          <%= link_to "Crear registro",
                      new_pet_record_path(@pet) %>
        </div>

        <%# Records %>
        <div id="records-3" data-vet-pet-show-target="records" class="d-none">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Fecha</th>
                <th scope="col">Tipo</th>
                <th scope="col">Registro</th>
                <th scope="col">Veterinaria</th>
              </tr>
            </thead>
            <tbody>
              <% @pet.records.each_with_index do |record, index| %>
                <tr>
                  <td> <%= record.date %> </td>
                  <td> <%= record.record_type.record_type %> </td>
                  <td> <%= record.name %> </td>
                  <td> <%= record.vet.veterinary.name %> </td>
                  <td> <%= link_to "Ver", record_path(record), class: "btn btn-primary" %> </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <%# Appointments %>
        <div id="appointments-3" data-vet-pet-show-target="appointments" class="d-none">
          Appointments
        </div>


        <%# Options %>
        <div id="options-3" data-vet-pet-show-target="options" class="d-none">
          <div class="d-flex">


          </div>
        </div>

      </div>



    </div>

  </div>

</div>
